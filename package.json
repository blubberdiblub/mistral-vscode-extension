{
  "name": "mistral-vscode-extension",
  "version": "0.0.1",
  "displayName": "Mistral AI for Copilot",
  "description": "Add Mistral provider to VSCode",
  "license": "MIT",
  "pricing": "Free",
  "author": {
    "name": "Niels Boehm",
    "email": "blubberdiblub@gmail.com",
    "url": "https://github.com/blubberdiblub/"
  },
  "publisher": "Extra Arcam",
  "repository": {
    "type": "github",
    "url": "https://github.com/blubberdiblub/mistral-vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.106.0",
    "node": ">=22.19.1",
    "npm": ">=9.2.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Machine Learning",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "autocomplete",
    "autocompletion",
    "cat",
    "chat",
    "chatgpt",
    "chatgpt-alternative",
    "co-pilot",
    "code-assistant",
    "codestral",
    "copilot",
    "devstral",
    "gpt",
    "language",
    "llama",
    "llm",
    "magistral",
    "ministral",
    "mistral",
    "mistralai",
    "model",
    "pair",
    "pixtral",
    "programming",
    "refactor",
    "refactoring",
    "snippets",
    "voxtral"
  ],
  "activationEvents": [
    "onLanguageModelChatProvider:extra-arcam.mistralai",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extra-arcam.mistralai.configure",
        "title": "Configure Mistral AI",
        "category": "Mistral AI"
      }
    ],
    "languageModelChatProviders": [
      {
        "vendor": "extra-arcam.mistralai",
        "displayName": "Mistral AI",
        "managementCommand": "extra-arcam.mistralai.configure"
      }
    ]
  },
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "scripts": {
    "clean": "del-cli dist out",
    "compile": "vite build --mode development",
    "compile-tests": "tsc -p tests/tsconfig.json --sourceMap",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "package": "vite build --mode production",
    "prepare": "npm run package",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "vscode-test",
    "test:watch": "npm run watch-tests & npm run watch & npm run test",
    "vscode:prepublish": "npm run package",
    "watch": "vite build --watch --mode development",
    "watch-tests": "tsc -p tests/tsconfig.json -w --sourceMap"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.6.1",
    "@tsconfig/node22": "^22.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.1",
    "@types/string-format": "^2.0.3",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "del-cli": "^7.0.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.7"
  },
  "dependencies": {
    "@mistralai/mistralai": "^1.10.0",
    "string-format": "^2.0.0"
  }
}
